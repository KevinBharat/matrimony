<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.matrimony.Design.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/dashboard_btn_layout">

            <Button
                android:id="@+id/dashboard_btn_reg"
                style="@style/dashboard_btn"
                android:drawableTop="@drawable/ic_reg"
                android:text="Registration" />
        </LinearLayout>

        <LinearLayout style="@style/dashboard_btn_layout">

            <Button
                android:id="@+id/dashboard_btn_display"
                style="@style/dashboard_btn"
                android:drawableTop="@drawable/ic_displayall"
                android:text="Display" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/dashboard_btn_layout">

            <Button
                android:id="@+id/dashboard_btn_search"
                style="@style/dashboard_btn"
                android:drawableTop="@drawable/ic_search"
                android:text="Search" />
        </LinearLayout>

        <LinearLayout style="@style/dashboard_btn_layout">

            <Button
                android:id="@+id/dashboard_btn_fav"
                style="@style/dashboard_btn"
                android:drawableTop="@drawable/ic_fav"
                android:text="Favourite" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/dashboard_btn_layout">

            <Button
                android:id="@+id/dashboard_btn_retrofit"
                style="@style/dashboard_btn"
                android:drawableTop="@drawable/ic_search"
                android:text="Online Example" />
        </LinearLayout>

        <LinearLayout
            android:visibility="invisible" style="@style/dashboard_btn_layout">

            <Button

                style="@style/dashboard_btn"
                android:drawableTop="@drawable/ic_fav"
                android:text="Favourite" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
